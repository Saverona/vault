        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
      {{#if (eq env.ANTORA_PROD_BUILD 'true')}}
        <div class="navbar-item has-dropdown is-hoverable version-toggler">
          <div class="navbar-link">
		    {{#if (eq site.url '/dv5')}}
		    Docsvision 5
			{{else}}
			Docsvision Linux Edition
			{{/if}}
		  </div>
          <div class="navbar-dropdown">
            <a class="navbar-item" href="/dv5">Docsvision 5</a>
            <a class="navbar-item" href="/dv6">Docsvision Linux Edition</a>
          </div>
        </div>
      {{else}}
        <div class="navbar-item has-dropdown is-hoverable version-toggler">
          <div class="navbar-link">
		    {{#if (eq site.url '/dv5')}}
		    Docsvision 5
			{{else}}
			{{#if (eq site.url '/dv6')}}
			Docsvision Linux Edition
			{{else}}
		    Все версии
		    {{/if}}
			{{/if}}
		  </div>
          <div class="navbar-dropdown">
            <a class="navbar-item" href="/">Все версии</a>
            <a class="navbar-item" href="/dv5/">Docsvision 5</a>
            <a class="navbar-item" href="/dv6/">Docsvision Linux Edition</a>
          </div>
        </div>
        {{/if}}
        <a class="navbar-item" href="https://docsvision.com/">Docsvision.com</a>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Дополнительно</div>
          <div class="navbar-dropdown is-right">
            <a class="navbar-item" href="https://docsvision.github.io/WebClient-JsDocApi">Справочник JavaScript API модуля Web-клиент</a>
