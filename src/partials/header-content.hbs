<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" href="{{{or site.url siteRootPath}}}" title="{{site.title}}">
        <img src="{{{uiRootPath}}}/img/logo.svg" alt="ДВ-Лого" width="24"></a>
      <a class="navbar-item title" href="{{{or site.url siteRootPath}}}">{{site.title}}</a>
      {{#if env.SITE_SEARCH_PROVIDER}}
      {{#if (eq page.layout 'home')}}
      {{else}}
      <div class="navbar-item search hide-for-print">
        <div id="search-field" class="field">
          <input id="search-input" type="text" placeholder="Поиск"{{#if page.home}} autofocus{{/if}}>
        </div>
      </div>
      {{/if}}
      {{/if}}
      <button class="navbar-burger" aria-controls="topbar-nav" aria-expanded="false" aria-label="Развернуть главное меню">
